function test-loop-demo(: counter the-value) {
    asm
// show a count up loop and calculate 2^10
    0 counter store
    1 the-value store
    loop-start:
    counter 1 add counter store
    2 the-value mult the-value store
    counter say
    " " say
    counter 10 cmp loop-start jlt
    "Loop finished!\n" say
    "Final result: " say
    the-value say
    "\n" say
}

