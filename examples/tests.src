    test_flags:
    testFlags typeof Integer cmp test_local jz
    "Failed typeof testFlags == Integer." error

    test_local:
    "Testing local variable values...[br]" say
    localvar none cmp test_local_2 jz
    "Failed localvar default value == none." error

    test_local_2:
    0 *localvar store
