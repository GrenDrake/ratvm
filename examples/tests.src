    "Failed typeof testValues == Function." error

    test_object:
    first_obj typeof Object cmp test_property jz
    "Failed typeof first_obj == testObject." error

    test_property:
    testProperty typeof Property cmp test_varref jz
    "Failed typeof testProperty == Property." error

    test_varref:
    *localvar typeof Reference cmp test_flags jz
